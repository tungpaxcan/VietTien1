            </thead>
            <tbody id="tbd">
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/ebapi-modules.js"></script>
    <script src="~/Scripts/elements.js"></script>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <script>
        
        $(document).ready(function () {
            if (/Android/i.test(navigator.userAgent)) {
                $("#HandHeld").show()

            } else {
                $("#HandHeld").hide()

            }

            
            RFIDEnumrate()
        })
        

    </script>
    <script>

        var seach = '';
        TonKho(seach)

        $('#seachidgood').keyup(function (e) {
            TonKho()
        })
        function TonKho() {
            seach = $('#seachidgood').val();
            $.ajax({
                url: '/detailwarehouse/TonKho',
                type: 'get',
                data: {
                    seach
                },
                success: function (data) {
                    var Stt = 1;
                    if (data.code == 200) {
                        $('#tbd').empty()
                        $.each(data.c, function (k, v) {
                            var ids = $('.TON').map(function () {
                                return this.id;
                            }).get();
                            if (ids.includes(v.id)) {
                                var amounts = $('#inventory' + v.id + '').text();
                                $('#inventory' + v.id + '').empty();

                                $('#inventory' + v.id + '').append(Number(amounts) + 1);
                            } else {
                                let table = '<tr id="' + v.id + '" class="TON">'
                                table += '<td id="checkinvent' + v.id + '" style="background:red;color:white">0</td>'
                                table += '<td>' + (Stt++) + '</td>'
                                table += '<td>' + v.K + '</td>'
                                table += '<td>' + v.id + '</td>'
                                table += '<td>' + v.name + '</td>'
                                table += '<td id="inventory' + v.id + '">1</td>'



                                table += '</tr>'
                                $('#tbd').append(table)
                            }

                        })
                    }
                }
            })
        }
        function RFIDEnumrate() {
          
            rfid.transport = 'serial'
            rfid.enumerate();
            rfid.readerID = 'RFID1';
            rfid.connect();
            rfid.statusEvent = "statusEvent(%json)";
            rfid.tagEvent = "TagHandler(%json)";
        }
        var lstEpcSended = [];
        $("#ScanMethod").change(function () {
            if ($(this).is(":checked")) {
                alert('Bắt đầu quét RFID')
                console.log('rfid')
                lstEpcSended.length = 0;
                TonKho()

                EB.Barcode.disable()
                RFIDEnumrate()

            } else {
                alert('Bắt đầu quét Barcode')
                console.log('bar')
                lstEpcSended.length = 0;
                TonKho()


                rfid.disconnect()
                BarcodeEnumrate()


            }

        });
        //RFID

        function TagHandler(tagarray) {
            for (i = 0; i < tagarray.TagData.length; i++) {
                var epc = tagarray.TagData[i].tagID
                if (!lstEpcSended.includes(epc)) {
                    lstEpcSended.push(epc)
                    temp1(epc)
                }
            }

        }


        //Barcode
        // MC3300

        function BarcodeEnumrate() {
                EB.Barcode.enable({
                allDecoders: true
            }, temp);
        }


        function temp(rawBar) {
            var t = rawBar.data
            t = t.substring(0, t.length - 8)
            CompareReceipt(t)
        }

        function temp1(t) {
            
            t = t.substring(0, t.length - 8)
            CompareReceipt(t)
        }
       

        function CompareReceipt(barcode) {
           
            var invent = $('#inventory' + barcode + '').text()
            var inventcheck = $('#checkinvent' + barcode + '').text()

            var qty = Number(invent);

            var checkqty = Number(inventcheck);

            if (invent != null && inventcheck != null) {
                if (checkqty < qty)
                    checkqty++
                if (checkqty < qty && checkqty > 0) {

                    $('#checkinvent' + barcode + '').css('background', '#ffa800')
                }
                else {
                    $('#checkinvent' + barcode + '').css('background', 'green')
                }
                $('#checkinvent' + barcode + '').text(checkqty)
            }


        }

    </script>
    
}

