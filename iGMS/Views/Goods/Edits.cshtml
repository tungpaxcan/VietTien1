                        let table = '<option value="@Model.Color.Id">@Model.Color.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#color').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::Size--------------
        function Size() {
            $.ajax({
                url: '/goods/Size',
                type: 'get',
                success: function (data) {
                    $('#size').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.Size.Id">@Model.Size.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#size').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::gender--------------
        function Coo() {
            $.ajax({
                url: '/goods/Coo',
                type: 'get',
                success: function (data) {
                    $('#coo').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.Coo.Id">@Model.Coo.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#coo').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::gender--------------
        function Gender() {
            $.ajax({
                url: '/goods/Gender',
                type: 'get',
                success: function (data) {
                    $('#gender').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.Gender.Id">@Model.Gender.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#gender').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::WareHouse--------------
        function WareHouse() {
            $.ajax({
                url: '/goods/WareHouse',
                type: 'get',
                success: function (data) {
                    $('#warehouse').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdWareHouse">@Model.WareHouse.Name.</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#warehouse').append(table);
                        QTY();
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
               //--------------------Select::WareHouse--------------
        function QTY() {
            var id = $('#id').val().trim();
            var warehouse = $('#warehouse option:selected').val();
            $.ajax({
                url: '/goods/QTY',
                type: 'get',
                data: {
                    id, warehouse
                },
                success: function (data) {
                    if (data.code == 200) {
                        $.each(data.c, function (k, v) {
                            $('#qty').val(v.qty)
                        })
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
    </script>
    <script src="~/Scripts/Goods.js"></script>
}


