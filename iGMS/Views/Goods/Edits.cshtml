@model iGMS.Models.Good
@{
    ViewBag.Title = "Sửa Hàng Hóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input hidden value="@Model.Id" id="id" />
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Sửa Hàng Hóa
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    Vui Lòng Nhập Đúng Tất Cả Dữ Liệu Để Đảm Bảo Hệ Thống
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Barcode <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group-prepend">
                    <input disabled class="form-control" value="@Model.Id" type="text" id="id" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Mã Barcode <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <svg id="barcode">

                    </svg>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Mã Hàng Hóa <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group-prepend">
                    <input disabled class="form-control" value="@Model.IdGood" type="text" id="idgood" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">SKU <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group-prepend">
                    <input disabled class="form-control" value="@Model.SKU" type="text" id="sku" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Phong Cách<span style="color:red"> (*) </span></label>
            <div class="col-2">
                <select class="form-control" id="style">
                </select>
            </div>
            <label class="col-2 col-form-label">Màu Sắc</label>
            <div class="col-2">
                <select class="form-control" id="color">
                </select>
            </div>
            <label class="col-2 col-form-label">Kích Thước</label>
            <div class="col-2">
                <select class="form-control" id="size">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Kho Hàng <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <select class="form-control" id="warehouse">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Nhà Cung Cấp <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group">
                    <input name="tags-outside" class="tagify--outside form-control" id="supplier">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Số Lượng Tồn <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <input class="form-control" disabled  id="qty" type="number" />
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tên Hàng Hóa <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control" value="@Model.Name" type="text" placeholder="Tên Hàng Hóa" id="name" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Giới Tính</label>
            <div class="col-10">
                <select class="form-control" id="gender">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thuộc Loại Hàng <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <select class="form-control" id="categoods">
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thuộc Nhóm Hàng <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <select class="form-control" id="groupgoods">
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Giá Bán <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control " type="text" value="@Model.Price" id="price" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Mùa vụ</label>
            <div class="col-10">
                <select class="form-control" id="season">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Nhà Sản Xuất</label>
            <div class="col-10">
                <select class="form-control" id="coo">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thành Phần <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control" type="text" value="@Model.Material" placeholder="Thành Phần" id="material" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tên Công Ty <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control" type="text" value="@Model.Company" placeholder="Tên Công Ty " id="company" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Giá Mới<span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control " type="text" value="@Model.PriceNew" id="pricenew" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-10">
                <button type="submit" class="btn btn-success mr-2" onclick="Edit()">Submit</button>
                <a href="/Goods/Index" type="reset" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        WareHouse()
        CateGooods();
        GroupGoods()
        Style();
        Color();
        Size();
     
        Gender()
        Season();
        Coo()
         //--------------------Select::CateGoods--------------
        function CateGooods() {
            $.ajax({
                url: '/goods/CateGoods',
                type: 'get',
                success: function (data) {
                    $('#categoods').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.CateGood.Id">@Model.CateGood.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#categoods').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        function GroupGoods() {
            $.ajax({
                url: '/goods/GroupGoods',
                type: 'get',
                success: function (data) {
                    $('#groupgoods').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.GroupGood.Id">@Model.GroupGood.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#groupgoods').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        var input = document.querySelector('input[name=tags-outside]')
        var idgoods = $('#id').val().trim();
        // init Tagify script on the above inputs
        $.ajax({
            url: '/goods/SupplierEdit',
            type: 'get',
            data: {
                idgoods
            },
            success: function (data) {
                if (data.code == 200) {
                    let a = ''
                    let b = ''
                    $.each(data.c, function (k, v) {
                        /*a += v.id + " : " + v.name + ","*/
                        b += v.id + " : " + v.name + ","

                    })
                    $('#supplier').val(b)
                    $.ajax({
                        url: '/goods/Supplier',
                        type: 'get',
                        success: function (data) {
                            if (data.code == 200) {
                                let a = ''
                                $.each(data.c, function (k, v) {
                                    a += v.id + " : " + v.name + ","
                                })
                                const myArray = a.split(",");
                                new Tagify(input, {
                                    whitelist:
                                        myArray
                                    ,
                                    dropdown: {
                                        position: "input",
                                        enabled: 0// always opens dropdown when input gets focus
                                    }
                                })


                            }
                        }
                    })
                }
            }
        })
        // init Tagify script on the above inputs
       //--------------------Select::Unit--------------
        function Style() {
            $.ajax({
                url: '/goods/Style',
                type: 'get',
                success: function (data) {
