@model iGMS.Models.Good
@{
    ViewBag.Title = "Chi Tiết Hàng Hóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input hidden value="@Model.Id" id="id" />
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Chi Tiết Hàng Hóa
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    Vui Lòng Nhập Đúng Tất Cả Dữ Liệu Để Đảm Bảo Hệ Thống
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Nhà Cung Cấp <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group">
                    <input readOnly name="tags-outside" class="tagify--outside form-control" id="supplier" value="">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thuộc Loại Hàng <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <select disabled class="form-control" id="categoods">
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tên Hàng Hóa <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control" type="text" placeholder="Tên Hàng Hóa" id="name" value="@Model.Name" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Giá Bán <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control " type="text" value="@Model.Price" id="price" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thuế Bán </label>
            <div class="col-10">
                <div class="input-group ">
                    <span class="input-group-text">%</span>
                    <input disabled class="form-control" type="number" value="@Model.PriceTax" id="pricetax" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Giá Nội Bộ </label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control " type="text" value="@Model.InternalPrice" id="internalprice" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Thuế GTGT Nội Bộ</label>
            <div class="col-10">
                <div class="input-group ">
                    <span class="input-group-text">%</span>
                    <input disabled class="form-control" type="number" value="@Model.GTGTInternalTax" id="gtgtinternaltax" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Chiết Khấu Bán</label>
            <div class="col-10">
                <div class="input-group ">
                    <span class="input-group-text">%</span>
                    <input disabled class="form-control" type="number" value="@Model.Discount" id="discount" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Chiết Khấu Nội Bộ</label>
            <div class="col-10">
                <div class="input-group ">
                    <span class="input-group-text">%</span>
                    <input disabled class="form-control" type="number" value="@Model.InternalDiscount" id="internaldiscount" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Hạn Sử Dụng</label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control" type="datetime" id="expiry" value="@Model.Expiry.Value.Month/@Model.Expiry.Value.Day/@Model.Expiry.Value.Year" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Hạn Bảo Hành</label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control" type="datetime" id="warrantyperiod" value="@Model.WarrantyPeriod.Value.Month/@Model.WarrantyPeriod.Value.Day/@Model.WarrantyPeriod.Value.Year" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tồn Kho Tối Thiểu</label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control" type="number" id="minimuminventory" value="@Model.MinimumInventory" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tồn Kho Tối Đa</label>
            <div class="col-10">
                <div class="input-group ">
                    <input disabled class="form-control" type="number" id="maximuminventory" value="@Model.MaximumInventory" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Mô Tả</label>
            <div class="col-10">
                <div class="input-group ">
                    <textarea disabled class="form-control" type="number" id="des">@Model.Description</textarea>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-1 col-form-label">Đơn Vị<span style="color:red"> (*) </span></label>
            <div class="col-2">
                <select disabled class="form-control" id="unit1">
                </select>
            </div>
            <label class="col-1 col-form-label">Mùa vụ</label>
            <div class="col-2">
                <select disabled class="form-control" id="season">
                </select>
            </div>
            <label class="col-1 col-form-label">Màu Sắc</label>
            <div class="col-2">
                <select disabled class="form-control" id="color">
                </select>
            </div>
            <label class="col-1 col-form-label">Kích Thước</label>
            <div class="col-2">
                <select disabled class="form-control" id="size">
                </select>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-10">
                <a href="/Goods/Index" type="reset" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        CateGooods();
        Unit();
        Season();
        Color();
        Size();

        //--------------------Select::CateGoods--------------
        function CateGooods() {
            $.ajax({
                url: '/goods/CateGoods',
                type: 'get',
                success: function (data) {
                    $('#categoods').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdCate">@Model.CateGood.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#categoods').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        var input = document.querySelector('input[name=tags-outside]')
        var idgoods = $('#id').val().trim();
        // init Tagify script on the above inputs
        $.ajax({
            url: '/goods/SupplierEdit',
            type: 'get',
            data: {
                idgoods
            },
            success: function (data) {
                if (data.code == 200) {
                    let a = ''
                    let b = ''
                    $.each(data.c, function (k, v) {
                        /*a += v.id + " : " + v.name + ","*/
                        b += v.id + " : " + v.name + ","

                    })
                    $('#supplier').val(b)
                    $.ajax({
                        url: '/goods/Supplier',
                        type: 'get',
                        success: function (data) {
                            if (data.code == 200) {
                                let a = ''
                                $.each(data.c, function (k, v) {
                                    a += v.id + " : " + v.name + ","
                                })
                                const myArray = a.split(",");
                                new Tagify(input, {
                                    whitelist:
                                        myArray
                                    ,
                                    dropdown: {
                                        position: "input",
                                        enabled: 0// always opens dropdown when input gets focus
                                    }
                                })


                            }
                        }
                    })
                }
            }
        })
        //--------------------Select::Unit--------------
        function Unit() {
            $.ajax({
                url: '/goods/Unit',
                type: 'get',
                success: function (data) {
                    $('#unit1').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdUnit">@Model.Unit.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#unit1').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::Season--------------
        function Season() {
            $.ajax({
                url: '/goods/Season',
                type: 'get',
                success: function (data) {
                    $('#season').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdSeason">@Model.Season.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#season').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::Season--------------
        function Color() {
            $.ajax({
                url: '/goods/Color',
                type: 'get',
                success: function (data) {
                    $('#color').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdColor">@Model.Color.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#color').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
        //--------------------Select::Size--------------
        function Size() {
            $.ajax({
                url: '/goods/Size',
                type: 'get',
                success: function (data) {
                    $('#size').empty();
                    if (data.code == 200) {
                        let table = '<option value="@Model.IdSize">@Model.Size.Name</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#size').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
    </script>
    <script src="~/Scripts/Goods.js"></script>
}



