</div>
@section scripts{
    <script>
        $(document).ready(function () {
            

        if (/Android/i.test(navigator.userAgent)) {
           $("#HandHeld").show()
        } else {
            $("#HandHeld").hide()
            }
            rfid.statusEvent = "statusEvent(%json)";
            rfid.tagEvent = "TagHandler(%json)";
            RFIDEnumrate()
        });
        
        var d = new Date()
        $('#id').val(d.Day)
        $(document).ready(function () {
            $('#id').val(d.getDate() + "" + (d.getMonth() + 1) + "" + d.getFullYear() + "" + d.getHours() + "" + d.getMinutes() + "" + d.getSeconds())
        });
        Method()
        User()
        function User() {
            $.ajax({
                url: '/Receipt/UserNV',
                type: 'get',
                success: function (data) {
                    $('#user1').empty();
                    $('#user2').empty();
                    if (data.code == 200) {
                        let table = '<option value="-1">Chọn Nhân Viên Kiểm Hàng</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#user1').append(table);
                        $('#user2').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }

        function Method() {
            $.ajax({
                url: '/Receipt/Method',
                type: 'get',
                success: function (data) {
                    $('#method').empty();
                    if (data.code == 200) {
                        let table = '<option value="-1">Chọn Phương Thức</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#method').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
    </script>
    <script src="~/Scripts/Receipt.js"></script>
    <script src="~/Scripts/ebapi-modules.js"></script>
    <script src="~/Scripts/elements.js"></script>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <script type="text/javascript">
       
        var lstEpcSended = [];
   

      //Switch Toggle
        $("#ScanMethod").change(function () {
            if ($(this).is(":checked")) {
                alert('Bắt đầu quét RFID')
                console.log('rfid')
                lstEpcSended.length = 0;
                getDetailGoodOrder()
                EB.Barcode.disable()
                RFIDEnumrate()
                
            } else {
                alert('Bắt đầu quét Barcode')
                console.log('bar')
                lstEpcSended.length = 0;
                getDetailGoodOrder()
                rfid.disconnect()
                BarcodeEnumrate()
            }

        })
       
        //RFID
       
      
        
        function TagHandler(tagarray) {

            for (i = 0; i < tagarray.TagData.length; i++) {
                var epc = tagarray.TagData[i].tagID
                if (!lstEpcSended.includes(epc)) {
                    lstEpcSended.push(epc)
                    temp1(epc)
                }
            }


            
        }

        function RFIDEnumrate() {

            rfid.transport = 'serial'
            rfid.readerID = 'RFID1';

            rfid.enumerate();
            setTimeout(function () {
                rfid.connect();
            }, 1000);;
      
        }


        
        //Barcode
        // MC3300
       
        function BarcodeEnumrate() {
            rfid.disconnect()
            EB.Barcode.enable({
                allDecoders: true
            }, MouseCheck);
        }

        function MouseCheck(code) {
            var txt = getText(document.activeElement);


            if (txt == 'purchaseorder') {
                setPurchaseOrderText(code.data)

            } else {

                temp(code)
            }

        }
        function temp(rawBar) {
            var t = rawBar.data
            t = t.substring(0, t.length - 8)
            CompareReceipt(t)
        }

        function temp1(t) {

            t = t.substring(0, t.length - 8)
            
            CompareReceipt(t)
        }
        function getText(elem) {
            if ((elem.tagName === "INPUT" && elem.type === "text")) {

                return elem.id
            }
            return null;
        }


        function setPurchaseOrderText(code) {
            $('#purchaseorder').val(code)
        }
    </script>
}
