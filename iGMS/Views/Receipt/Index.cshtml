
@{
    ViewBag.Title = "Nhập Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div hidden id="ID"></div>
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Nhập Kho
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    Vui Lòng Nhập Đúng Tất Cả Dữ Liệu Để Đảm Bảo Hệ Thống
                </div>
            </div>
        </div>
        <div class="form-group row" id="HandHeld">
            <label for="example-search-input" class="col-2 col-form-label">Phương thức quét<span style="color:red"> (*Handheld)</span> </label>
            <div class="col-2">
                <input type="checkbox" id="ScanMethod" checked data-toggle="toggle" data-on="RFID" data-off="Barcode" data-onstyle="success" data-offstyle="primary">
            </div>

        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Số Phiếu Nhận <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control" type="number" placeholder="Số Phiếu Nhận" id="id" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-2">Số Đơn Hàng</label>
            <div class="col-10">
                <input class="form-control " id="purchaseorder" name="purchaseorder" />
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Phương Thức Thanh Toán</label>
            <div class="col-10">
                <select class="form-control" id="method"></select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Phương Thức Thanh Toán</label>
            <div class="col-10">
                <span name="paydh"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Ngày Đơn Hàng</label>
            <div class="col-10">
                <span name="datedh"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Thời Hạn Thanh Toán</label>
            <div class="col-10">
                <span id="datepaydh"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Nhà Cung Cấp</label>
            <div class="col-10">
                <span name="namesupplier"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Nhân Viên Kiểm Hàng 1</label>
            <div class="col-10">
                <select class="form-control " data-live-search="true" id="user1">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Nhân Viên Kiểm Hàng 2</label>
            <div class="col-10">
                <select class="form-control " data-live-search="true" id="user2">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-search-input" class="col-2 col-form-label">Nhập Tại</label>
            <div class="col-10">
                <span name="warehouse"></span>
            </div>
        </div>
        <div class="form-group  row tablenhan">
            <label for="example-search-input" class="col-2 col-form-label">Hàng Hóa<span style="color:red"> (*) </span></label>
            <div class="col-10" style="height: 500px;overflow-y: scroll;">
                <table class="table table-separate table-head-custom table-checkable dataTable no-footer dtr-inline" id="kt_datatable" role="grid" aria-describedby="kt_datatable_info" style="width: 1234px;">
                    <thead>
                        <tr role="row">
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Trạng Thái</th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Stt</th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending" hidden></th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Mã Hàng</th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Tên Hàng</th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Xuất Xứ</th>
                            <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;" aria-label="Company Email: activate to sort column ascending">Số Lượng</th>

                        </tr>
                    </thead>
                    <tbody name="tbd">
                    </tbody>
                </table>
                <button type="submit" class="btn btn-success mr-2" onclick="RFID()">Bắt Đầu Quét RFIF</button>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tổng Tiền Hàng<span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group">
                    <h1 id="sumprice"></h1>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Mổ Tả Nếu Có Hàng Thiếu</label>
            <div class="col-10">
                <div class="input-group">
                    <textarea id="des" style="width:100%"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-10">
                <button type="submit" class="btn btn-success mr-2" onclick="Add()">Tạo Phiếu Nhận Hàng </button>
                <button type="submit" class="btn btn-success mr-2" id="btnct">Chứng Từ Đính Kèm </button>
                <a href="/Receipt/Index" type="reset" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
