
@{
    ViewBag.Title = "Báo Cáo Theo Ngành Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div id="kt_datatable_filter" class="dataTables_filter">
        <label>Search:<input id="seach" type="search" class="form-control form-control-sm" placeholder="" aria-controls="kt_datatable"></label>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">

        <!--begin::Mixed Widget 14-->
        <div class="card card-custom card-stretch gutter-b" id="changecate">
            <!--begin::Body-->
            <!--end::Body-->
        </div>
        <!--end::Mixed Widget 14-->
    </div>
    <div class="col-lg-6">
        <!--begin::Advance Table Widget 4-->
        <div class="card card-custom card-stretch gutter-b">
            <!--begin::Header-->
            <div class="card-header border-0 py-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label font-weight-bolder text-dark">Báo Cáo Bán Hàng</span>
                    <span class="text-muted mt-3 font-weight-bold font-size-sm"></span>
                </h3>
                <div class="card-toolbar">
                    <a onclick="fnExcelReport('exsale');" class="btn btn-info font-weight-bolder font-size-sm mr-3">New Report</a>
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body pt-0 pb-3">
                <div class="tab-content">
                    <!--begin::Table-->
                    <div class="table-responsive">
                        <table class="table table-head-custom table-head-bg table-borderless table-vertical-center" id="exsale">
                            <thead>
                                <tr class="text-left text-uppercase">
                                    <th>Số HĐ</th>
                                    <th>Ngày HĐ</th>
                                    <th>Thành Tiền</th>
                                    <th>Chi Tiết</th>
                                </tr>
                            </thead>
                            <tbody id="tbd">
                            </tbody>
                        </table>
                    </div>
                    <!--end::Table-->
                </div>
            </div>
            <!--end::Body-->
        </div>
        <!--end::Advance Table Widget 4-->
    </div>
    <div class="col-lg-4">

        <!--begin::Mixed Widget 14-->
        <div class="card card-custom card-stretch gutter-b" id="changecate">
            <div>Số Bill <span id="sobill"></span></div>
            <table class="table table-head-custom table-head-bg table-borderless table-vertical-center" >
                <thead>
                    <tr class="text-left text-uppercase">
                        <th>MÃ</th>
                        <th>SL</th>
                        <th>Tiền</th>
                    </tr>
                </thead>
                <tbody id="tbdbill">
                </tbody>
            </table>
        </div>
        <!--end::Mixed Widget 14-->
    </div>
</div>

@section scripts{
    <script>
        var seach = "";
        Show(seach)

        //Tìm Kiếm Nghành hàng

        $('#seach').keypress(function (e) {
            if (e.which == 13) {
                seach = $('#seach').val().trim()
                Show(seach)
            }
        })

        //END Tìm Kiếm Nghành hàng

        //------------------------------------------------------------------------------------------------------------------------------------------------


        //Hiển Thị Ngành Hàng

        function Show(seach) {
            $.ajax({
                url: '/ReportSale/Cate',
                type: 'get',
                data: {
                    seach
                },
                success: function (data) {
                    if (data.code == 200) {
                        $('#changecate').empty()
                        $.each(data.a, function (k, v) {
                            let a = '<div class="card-body d-flex flex-column">'
                            a += '<div class="radio-inline">'
                            a += '<label class="radio radio-lg">'
                            a += '<input type="radio" value="'+v.id+'" name="radio">'
                            a += '<span></span>' + v.name + ''
                            a += '</label>'
                            a += '</div>'
                            a += '</div>'
                            $('#changecate').append(a)
                        })

                        //Chọn Ngành Báo Cáo

                        $('input[name="radio"]').click(function () {
                            $('#tbd').empty()
                            var value = $(this).val()
                            Report(value)
                        })

                        //END Chọn Ngành Báo Cáo

                    } else {
                        alert(data.msg)
                    }
                }
            })
        }

        //END Hiển Thị Ngành Hàng

        //------------------------------------------------------------------------------------------------------------------------------------------------

        //Hiển Thị Các Báo Cáo

        function Report(value) {
            $.ajax({
                url: '/ReportSale/ShowCate',
                type: 'get',
                data: {
                    value
                },
                success: function (data) {
                    if (data.code == 200) {
                        $.each(data.a, function (k, v) {
                            TBD( v.id, v.createdate, v.sumprice)
                        })                     
                    } else {
                        alert(data.msg)
                    }
                }
            })
        }

        function TBD( id, createdate, sumprice) {
            $('#tbd').empty();
            var ids = $('.ID').map(function () {
                return this.id;
            }).get();
            if (ids.includes(id)) {

            } else {
                let tbd = '<tr class="ID" id="' + id + '">'
                tbd += '<td>' + id + '</td>'
                tbd += '<td>' + createdate + '</td>'
                tbd += '<td>' + sumprice + '</td>'
                tbd += '<td onclick="Detail(' + id +')"><img src="data:image/png;base64," /></td></tr>'
                $('#tbd').append(tbd);
            }
        }

        //End Hiển Thị Các Báo Cáo

        //------------------------------------------------------------------------------------------------------------------------------------------------

       function Detail(id) {
            $.ajax({
                url: '/ReportSale/Detail',
                type: 'get',
                data: {
                    id
                },
                success: function (data) {
                    $('#tbdbill').empty();           
                    if (data.code == 200) {
                        $.each(data.a, function (k, v) {
                            $('#sobill').empty();
                            var ids = $('.IDbill').map(function () {
                                return this.id;
                            }).get();
                            if (ids.includes(v.idgood)) {
                                var amount = document.getElementById('amount' + v.idgood + '').innerText
                                var amounts = Number(amount) + 1
                                $('#amount' + v.idgood + '').empty()
                                $('#amount' + v.idgood + '').append(amounts)
                            } else {
                                let tbd = '<tr class="IDbill" id="' + v.idgood + '">'
                                tbd += '<td>' + v.idgood + '</td>'
                                tbd += '<td id="amount' + v.idgood + '">1</td>'
                                tbd += '<td>' + v.sumprice + '</td></tr>'
                                $('#tbdbill').append(tbd);                              
                            }
                            $('#sobill').append(v.id);
                        })
                      
                    } else {
                        alert(data.msg)
                    }
                }
            })
        }
    </script>
}



